{
    "title": "Input schema",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "position": {
            "title": "Position",
            "type": "string",
            "description": "The job title or keywords to search for",
            "editor": "textfield",
            "default": "web developer"
        },
        "country": {
            "title": "Country",
            "type": "string",
            "description": "The country to search in",
            "editor": "textfield",
            "default": "UK"
        },
        "location": {
            "title": "Location",
            "type": "string",
            "description": "The location to search in",
            "editor": "textfield",
            "default": "London"
        },
        "maxItems": {
            "title": "Maximum Items",
            "type": "integer",
            "description": "Maximum number of items to scrape",
            "editor": "number",
            "default": 50
        },
        "parseCompanyDetails": {
            "title": "Parse Company Details",
            "type": "boolean",
            "description": "Whether to parse company details",
            "editor": "boolean",
            "default": false
        },
        "saveOnlyUniqueItems": {
            "title": "Save Only Unique Items",
            "type": "boolean",
            "description": "Whether to save only unique items",
            "editor": "boolean",
            "default": true
        },
        "followApplyRedirects": {
            "title": "Follow Apply Redirects",
            "type": "boolean",
            "description": "Whether to follow apply redirects",
            "editor": "boolean",
            "default": false
        }
    },
    "required": ["position", "country", "location"]
} 