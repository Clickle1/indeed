{
    "title": "Indeed Job Scraper",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "position": {
            "title": "Job Position",
            "type": "string",
            "description": "The job position to search for",
            "editor": "textfield",
            "prefill": "web developer"
        },
        "country": {
            "title": "Country",
            "type": "string",
            "description": "The country to search in (e.g., US, UK, CA)",
            "editor": "textfield",
            "prefill": "US"
        },
        "location": {
            "title": "Location",
            "type": "string",
            "description": "The city or area to search in",
            "editor": "textfield",
            "prefill": "San Francisco"
        },
        "maxItems": {
            "title": "Maximum Items",
            "type": "integer",
            "description": "Maximum number of job listings to scrape",
            "editor": "number",
            "prefill": 50,
            "minimum": 1,
            "maximum": 1000
        },
        "parseCompanyDetails": {
            "title": "Parse Company Details",
            "type": "boolean",
            "description": "Whether to scrape company details",
            "editor": "checkbox",
            "prefill": false
        },
        "saveOnlyUniqueItems": {
            "title": "Save Only Unique Items",
            "type": "boolean",
            "description": "Whether to save only unique job listings",
            "editor": "checkbox",
            "prefill": true
        },
        "followApplyRedirects": {
            "title": "Follow Apply Redirects",
            "type": "boolean",
            "description": "Whether to follow application redirects",
            "editor": "checkbox",
            "prefill": false
        }
    },
    "required": ["position", "country", "location"]
} 